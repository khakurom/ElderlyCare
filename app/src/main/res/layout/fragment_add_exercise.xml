<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="addExViewModel"
            type="com.project.elderlyhealthcare.presentation.viewmodels.main.EventViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragment.main.event.AddExerciseFragment">

        <include
            android:id="@+id/add_exercise_fr_cs_bar"
            bind:customTitle="@{@string/no_title}"
            bind:isHaveBack="@{true}"
            layout="@layout/custom_top_app_bar"
            />

        <LinearLayout
            android:id="@+id/layout_time_picker"
            android:layout_width="0dp"
            android:background="@drawable/background_border"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            bind:layout_constraintEnd_toStartOf="@id/gl_vertical_2"
            bind:layout_constraintStart_toStartOf="@+id/gl_vertical_1"
            bind:layout_constraintTop_toBottomOf="@+id/add_exercise_fr_cs_bar">

            <NumberPicker
                android:id="@+id/pickerHour"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <NumberPicker
                android:id="@+id/pickerMinute"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Giờ"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            bind:layout_constraintEnd_toStartOf="@id/gl_vertical_2"
            bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
            bind:layout_constraintTop_toBottomOf="@id/layout_time_picker">

            <ToggleButton
                android:id="@+id/toggle_bt_mon"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T2"
                android:layout_weight="1"
                android:textOff="T2"
                android:background="@drawable/background_border"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black" />

            <ToggleButton
                android:id="@+id/toggle_bt_tu"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T3"
                android:background="@drawable/background_border"
                android:textOff="T3"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textColor="@color/black" />

            <ToggleButton
                android:id="@+id/toggle_bt_we"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T4"
                android:background="@drawable/background_border"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textOff="T4"
                android:textColor="@color/black" />
            <ToggleButton
                android:id="@+id/toggle_bt_th"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T5"
                android:background="@drawable/background_border"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textOff="T5"
                android:textColor="@color/black" />
            <ToggleButton
                android:id="@+id/toggle_bt_fr"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T6"
                android:background="@drawable/background_border"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:textOff="T6"
                android:textColor="@color/black" />

            <ToggleButton
                android:id="@+id/toggle_bt_sa"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="T7"
                android:background="@drawable/background_border"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:textOff="T7"
                android:textColor="@color/black" />
            <ToggleButton
                android:id="@+id/toggle_bt_sun"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/login_blue"
                android:checked="false"
                android:textOn="CN"
                android:layout_weight="1"
                android:background="@drawable/background_border"
                android:textOff="CN"
                android:textColor="@color/black" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            bind:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            bind:layout_constraintGuide_percent="0.95" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>