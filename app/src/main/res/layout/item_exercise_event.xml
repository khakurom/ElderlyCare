<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/gl_horizontal_1"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_3"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_4"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_exercise_tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/item_exercise_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 pm"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_exercise_tv_day" />

                <TextView
                    android:id="@+id/item_exercise_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee time"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_exercise_tv_time" />

                <ImageView
                    android:id="@+id/item_exercise_iv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_note"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_exercise_tv_title" />

                <TextView
                    android:id="@+id/item_exercise_tv_note"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="7dp"
                    android:text="Go to coffee !!!"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/item_exercise_iv_note"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_exercise_iv_note"
                    app:layout_constraintTop_toTopOf="@id/item_exercise_iv_note" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch1"
                    android:backgroundTint="@color/login_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@id/gl_vertical_2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>





        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>