<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="addMedicineViewModel"
            type="com.project.elderlyhealthcare.presentation.viewmodels.main.EventViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragment.main.event.AddMedicineFragment">


        <include
            android:id="@+id/add_medicine_fr_cs_bar"
            layout="@layout/custom_top_app_bar"
            bind:customTitle="@{@string/add_medicine_screen}"
            bind:isHaveBack="@{true}"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:layout_constraintTop_toBottomOf="@id/add_medicine_fr_cs_bar"
            bind:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/layout_time_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_time_picker"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toStartOf="@+id/gl_vertical_1"
                    bind:layout_constraintTop_toTopOf="parent">

                    <NumberPicker
                        android:id="@+id/pickerHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.Picker"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/pickerMinute"
                        android:layout_width="wrap_content"
                        style="@style/AppTheme.Picker"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Giờ"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:padding="3dp"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/layout_time_picker">

                    <ToggleButton
                        android:id="@+id/toggle_bt_mon"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T2"
                        android:textOn="T2" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_tu"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T3"
                        android:textOn="T3" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_we"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T4"
                        android:textOn="T4" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_th"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T5"
                        android:textOn="T5" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_fr"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T6"
                        android:textOn="T6" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_sa"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="T7"
                        android:textOn="T7" />

                    <ToggleButton
                        android:id="@+id/toggle_bt_sun"
                        android:layout_width="10dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/login_blue"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textOff="CN"
                        android:textOn="CN" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Uống thuốc trong khoảng thời gian:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintEnd_toStartOf="@+id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/linearLayout2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/add_medicine_layout_begin_date_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_date_picker"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    bind:layout_constraintHorizontal_chainStyle="packed"
                    bind:layout_constraintEnd_toStartOf="@id/add_medicine_iv_narrow"
                    bind:layout_constraintStart_toStartOf="@+id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/add_medicine_tv_begin_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <ImageView
                    android:id="@+id/add_medicine_iv_narrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_navigate_next"
                    bind:layout_constraintBottom_toBottomOf="@+id/add_medicine_layout_begin_date_picker"
                    bind:layout_constraintEnd_toStartOf="@+id/add_medicine_layout_end_date_picker"
                    bind:layout_constraintStart_toEndOf="@+id/add_medicine_layout_begin_date_picker"
                    bind:layout_constraintTop_toTopOf="@+id/add_medicine_layout_begin_date_picker" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/add_medicine_layout_end_date_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_date_picker"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    bind:layout_constraintStart_toEndOf="@id/add_medicine_iv_narrow"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintTop_toBottomOf="@+id/textView8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/add_medicine_tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addMedicine_pick_date"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Các loại thuốc: "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintEnd_toStartOf="@+id/gl_vertical_2"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/add_medicine_layout_end_date_picker" />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_medicine_bt_add_medicine_type"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple_button"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    bind:layout_constraintBottom_toBottomOf="@+id/textView9"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintTop_toTopOf="@+id/textView9" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_medicine_rcv_medicine_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    bind:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/textView9" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Thuốc điều trị bệnh:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/add_medicine_rcv_medicine_type" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_medicine_layout_ed_disease_name"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="..."
                    bind:counterMaxLength="40"
                    bind:endIconMode="clear_text"
                    bind:helperText="Bắt buộc"
                    bind:helperTextTextColor="@color/login_red"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView10">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_medicine_ed_disease_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="40"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_medicine_bt_add_event"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_button"
                    android:text="Tạo lịch"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="50dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/add_medicine_layout_ed_disease_name" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>