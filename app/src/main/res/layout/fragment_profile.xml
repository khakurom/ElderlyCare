<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="customerInfoModel"
            type="com.project.elderlyhealthcare.domain.models.CustomerInfoModel" />
        <variable
            name="profileViewModel"
            type="com.project.elderlyhealthcare.presentation.viewmodels.main.AccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragment.main.account.ProfileFragment">

        <include
            android:id="@+id/profile_fr_cs_bar"
            layout="@layout/custom_top_app_bar"
            bind:customTitle="@{@string/no_title}"
            bind:isHaveBack="@{true}"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@id/profile_fr_cs_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Họ và tên"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_tv_name_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@{customerInfoModel.customerName}"
                    android:textSize="20sp"
                    android:textColor="@color/login_blue"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_name_account" />

                <TextView
                    android:id="@+id/profile_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@{customerInfoModel.phoneNumber}"
                    android:textSize="20sp"
                    android:textColor="@color/login_blue"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView2" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/grey"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_phone"

                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Họ và tên người cao tuổi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/view1" />

                <TextView
                    android:id="@+id/profile_tv_name_elder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@{customerInfoModel.elderName}"
                    android:textSize="20sp"
                    android:textColor="@color/login_blue"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Giới tính"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_name_elder" />

                <TextView
                    android:id="@+id/profile_tv_gender_elder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@{customerInfoModel.elderGender}"
                    android:textSize="20sp"
                    android:textColor="@color/login_blue"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Tuổi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_gender_elder" />


                <TextView
                    android:id="@+id/profile_tv_age_elder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/login_blue"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Cân nặng"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_age_elder" />

                <TextView
                    android:id="@+id/profile_tv_weight_elder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/login_blue"
                    android:text="@{customerInfoModel.elderWeight.toString()}"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Chiều cao"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_weight_elder" />

                <TextView
                    android:id="@+id/profile_tv_height_elder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/login_blue"
                    android:text="@{customerInfoModel.elderHeight.toString()}"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Thông tin địa chỉ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@id/profile_tv_height_elder" />

                <TextView
                    android:id="@+id/profile_tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@{customerInfoModel.prefecture}"
                    android:textSize="20sp"
                    android:textColor="@color/login_blue"
                    android:layout_marginBottom="50dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintEnd_toStartOf="@id/gl_vertical_3"
                    bind:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    bind:layout_constraintTop_toBottomOf="@+id/textView8" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.95" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>