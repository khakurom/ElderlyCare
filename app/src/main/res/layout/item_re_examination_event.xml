<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="reExModel"
            type="com.project.elderlyhealthcare.domain.models.ReExaminationEventModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@color/grey_1"
            android:backgroundTint="@color/grey_1"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/item_re_ex_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{@string/hour_minutes(reExModel.hour, reExModel.minutes)}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintBottom_toTopOf="@id/item_re_ex_tv_day_begin"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_re_ex_tv_day_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@{@string/re_ex_display_day_begin(reExModel.dayBegin)}"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toTopOf="@id/item_re_ex_tv_disease_name"
                    app:layout_constraintTop_toBottomOf="@id/item_re_ex_tv_time"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"/>

                <TextView
                    android:id="@+id/item_re_ex_tv_disease_name"
                    android:layout_width="wrap_content"
                    android:text="@{@string/re_ex_display_disease_name(reExModel.diseaseName)}"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/item_re_ex_tv_address"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_re_ex_tv_day_begin" />

                <ImageView
                    android:id="@+id/item_re_ex_iv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:src="@drawable/ic_clear"
                    app:layout_constraintEnd_toStartOf="@id/gl_vertical_2"
                    app:layout_constraintTop_toTopOf="parent" />



                <TextView
                    android:id="@+id/item_re_ex_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/re_ex_display_address(reExModel.address)}"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/item_re_ex_tv_disease_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"


                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/item_re_ex_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:checked="@{reExModel.isOn ? true : false}"
                    android:backgroundTint="@color/login_blue"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl_vertical_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>