<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="medicineModel"
            type="com.project.elderlyhealthcare.domain.models.MedicineEventModel" />
        <variable
            name="dayRepeat"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@color/grey_1"
            android:backgroundTint="@color/grey_1"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/item_medicine_tv_dayRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{dayRepeat}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_medicine_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{@string/hour_minutes(medicineModel.hour, medicineModel.minutes)}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_medicine_tv_dayRepeat" />

                <TextView
                    android:id="@+id/item_medicine_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{medicineModel.diseaseName}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/gl_vertical_1"
                    app:layout_constraintTop_toBottomOf="@id/item_medicine_tv_time" />

                <ImageView
                    android:id="@+id/item_medicine_iv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:src="@drawable/ic_clear"
                    app:layout_constraintEnd_toStartOf="@id/gl_vertical_2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/item_medicine_switchr"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/login_blue"
                    app:layout_constraintEnd_toStartOf="@+id/gl_vertical_2"
                    app:layout_constraintTop_toTopOf="@id/item_medicine_tv_title" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_vertical_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>